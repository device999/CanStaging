     .container(style='margin-bottom: 15px;')
            table.table-responsive
              h1.breast #{ __('Breast') } 
              form#table_form(name='table_form',action="/tnm", method="post")
                input(name='site', value='Breast', hidden='true', type='hidden')
                table#breast_form
                  thead
                    tr
                      td(align='right') Tumour ID:
                      td
                        input#tumour_id(name='tumour_id', type='text', title='THIS ID SHOULD NOT BE A PERSONAL IDENTIFIER.', readonly='readonly')
                        input#autogenerate(title='Auto-generate', name='auto_id', type='checkbox', onchange = "autogenerateUpdated()", checked='checked')
                        | Auto
                  thead
                    tr#T(onclick="hide_body('T')")
                      th T
                      th
                        p#valueT TX
                  tbody#T
                    tr#breast1
                        td #{ __('Enter size of invasive tumour') } (#{ __('cm') })
                        td
                          input#comboboxStyle(name="Size", type='number', step='0.1', min='0.0', max='15.9', title='0.0-15.9',class='tInput')
                    tr#breast2
                        td #{ __('Inflammatory carcinoma') } 
                        td
                          input(type='radio', name='data[T[Inflammation]]', value='T')
                          | Yes
                          input(type='radio', name='data[T[Inflammation]]', value='F', checked='')
                          | No
                    tr#breast2
                        td #{ __('Extension to chest wall (not including only pectoralis muscle)') } 
                        td
                          input(type='radio', name='data[T[Extension]]', value='T')
                          | Yes
                          input(type='radio', name='data[T[Extension]]', value='F', checked='')
                          | No
                    tr#breast2
                        td #{ __('Ulceration/ipsilateral satellite nodules/oedema (incl. peau d"orange) of skin') } 
                        td 
                          input(type='radio', name='data[T[Ulceration]]', value='T')
                          | Yes
                          input(type='radio', name='data[T[Ulceration]]', value='F', checked='')
                          | No
                  thead
                    tr#N(onclick="hide_body('N')")
                      th N
                      th
                        p#valueN NX
                  tbody#N
                    tr#breast1
                       td #{ __('Micrometastases only: none >2.0mm (but: >0.2mm or more than 200 cells)') } 
                       td
                          input(type='radio', name='data[N[MammarymetastasesNummer]]', value='T')
                          | Yes
                          input(type='radio', name='data[N[MammarymetastasesNummer]]', value='F', checked='')
                          | No
                    tr#breast2
                        td #{ __('Metastases in internal mammary nodes with metastases in sentinel lymphnode (not clinically detected)') } 
                        td 
                          input(type='radio', name='data[N[Mammarymetastases]]', value='T')
                          | Yes
                          input(type='radio', name='data[N[Mammarymetastases]]', value='F', checked='',)
                          | No
                    tr#breast2
                        td #{ __('Metastases in clinically detected internal mammary nodes') } 
                        td 
                          input(type='radio', name='data[N[detectedmammary]]', value='T')
                          | Yes
                          input(type='radio', name='data[N[detectedmammary]]', value='F', checked='')
                          | No
                    tr#breast2
                        td #{ __('Metastases in infraclavicular nodes') }
                        td
                          input(type='radio', name='data[N[infraclavicularmeta]]', value='T')
                          | Yes
                          input(type='radio', name='data[N[infraclavicularmeta]]', value='F', checked='')
                          | No
                    tr#breast2
                        td #{ __('Number of positive axillary nodes (at least one deposit >2.0mm)') } 	
                        td
                          input#comboboxStyle(name='Axillary', type='number', step='1', min='0.0', max='999.0', title='0-999',class='nInput')
                    tr#breast2
                        td #{ __('Metastases in supraclavicular nodes') } 	
                        td
                          input(type='radio', name='data[N[supraclavicularmeta]]', value='T')
                          | Yes
                          input(type='radio', name='data[N[supraclavicularmeta]]', value='F', checked='')
                          | No
                  thead
                    tr#M(onclick='hide_body("M")')
                      th M
                      th
                        p#valueM MX
                  tbody#M
                    tr#breast1
                        td #{ __('Distant metastases') } 
                        td
                          select(name='M',id='distantM')
                            option(value='select', disabled='', selected='', style='display:none;') #{ __('Please Choose') } 
                            option(value='1', title='No distant metastases') #{ __('No distant metastases') } 
                            option(value='2', title='Distant metastases') #{ __('Distant metastases') } 
                          span(onclick='resetDistantM()')
                            |Reset
                  thead
                    tr
                      th SG
                      th
                        p#SG
                  thead
                    tr
                      th SimpG
                      th
                        p#SimpG
                  tbody
                    tr
                      th SG range
                      th
                        p#SGRange
                    tr
                      th TNM
                      th
                        p#TNM
                    trs
                      td
                      td(align='right')
                        a(href='/getLog')
                          input(type='button', value='Get log')
                        input(type='button', value='Reset Form' onclick='resetForm()')
                        input(type='button', value='Submit', onclick = 'submitForm()')
            ul.pager
              li.previous
                a(href='/site') #{ __("Previous") } 
              li.next
                a(href='/site/cervix') #{ __("Next") }
