     .container(style='margin-bottom: 15px;')
        table.table-responsive
            h1.lung #{ __('Lung') } 
            form#table_form(name='table_form')
              input(name='site', value='Lung', hidden='true', type='hidden')
              table#lung_form
                thead
                  tr
                    td(align='right') Tumour ID:
                    td
                      input(name='tumour_id', type='text', title='THIS ID SHOULD NOT BE A PERSONAL IDENTIFIER.', readonly='readonly')
                      input(title='Auto-generate', name='auto_id', type='checkbox', checked='checked')
                      | Auto
                thead
                  tr#T(onclick='hide_body("T")')
                    th T
                    th
                      p#valueT TX
                tbody#T
                  tr#lung1
                    td #{ __('Enter size of invasive tumour') } #{ __('cm') }
                    td
                      input(name='data[T[Size-invasive-tumour]]', type='number', step='0.1', min='0.0', max='50.0', title='0.0-50.0' class='tumorSize')
                      input(name='data[T[Size-invasive-tumour]]', type='hidden', step='0.1', min='0.0', max='50.0', title='0.0-50.0' id='tumorKey' class='monkey')
                  tr#lung2
                    td #{ __('Bronchial invasion') } 
                    td
                      select#invr(name='data[T[TX]]')
                          option(value='', disabled='', selected='', style='display:none;') #{ __('Please Choose') } 
                          option(value='1', title='Tumour does NOT invade main bronchus') #{ __('Tumour does NOT invade main bronchus') }
                          option(value='2',title='Tumour involves the main bronchus >= 2cm distal to the carina') #{ __('Tumour involves the main bronchus >= 2cm distal to the carina') }
                          option(value='3',title='Tumour involves the main brochus < 2cm distal to the carina') #{ __('Tumour involves the main brochus < 2cm distal to the carina') }
                          option(value='4',title='Tumour involves the carina or trachea') #{ __('Tumour involves the carina or trachea') }
                      span(onclick='resetDistantT()')
                        | Reset 
                  tr#lung2
                    td #{ __('Invades the visceral pleura') }  
                    td
                      input(type='radio', name='data[T[visceralpleura]]', value='T')
                      | Yes
                      input(type='radio', name='data[T[visceralpleura]]', value='F', checked='')
                      | No
                  tr#lung2
                    td #{ __('Atelectasis or obstructive pneumonitis (NOT entire lung)') } 
                    td
                      input(type='radio', name='data[T[Atelectasis_pneumonitis]]', value='T')
                      | Yes
                      input(type='radio', name='data[T[Atelectasis_pneumonitis]]', value='F', checked='')
                      | No
                  tr#lung3
                    td #{ __('Tumour invades any of the following: chest wall or rib; diaphragm; phrenic nerve; mediastinal pleura; parietal pericardium') }
                    td
                      input(type='radio', name='data[T[tumor_invades]]', value='T')
                      | Yes
                      input(type='radio', name='data[T[tumor_invades]]', value='F', checked='')
                      | No
                  tr#lung3
                    td #{ __('Separate tumour nodules in same lobe') } 
                    td
                      input(type='radio', name='data[T[tumor_nodules]]', value='T')
                      | Yes
                      input(type='radio', name='data[T[tumor_nodules]]', value='F', checked='')
                      | No
                  tr#lung3
                    td #{ __('Atelectasis or obstructive pneumonitis of the entire lung') }  
                    td
                      input(type='radio', name='data[T[pneumonitis]]', value='T')
                      | Yes
                      input(type='radio', name='data[T[pneumonitis]]', value='F', checked='')
                      | No
                  tr#lung4
                    td #{ __('Vocal cord paralysis') } 
                    td
                      input(type='radio', name='data[T[vocal_cord]]', value='T')
                      | Yes
                      input(type='radio', name='data[T[vocal_cord]]', value='F', checked='')
                      | No
                  tr#lung4
                    td #{ __('Separate tumour nodule(s) in a different ipsilateral lobe') }  
                    td
                      input(type='radio', name='data[T[ipsilateral_lobe]]', value='T')
                      | Yes
                      input(type='radio', name='data[T[ipsilateral_lobe]]', value='F', checked='')
                      | No
                  tr#lung4
                    td #{ __('Tumour invades any of the following: mediastinum; heart or great vessels; recurrent laryngeal nerve; vertebral body; oesophagus') }  
                    td
                      input(type='radio', name='data[T[tumor_mhg]]', value='T')
                      | Yes
                      input(type='radio', name='data[T[tumor_mhg]]', value='F', checked='')
                      | No
                thead
                  tr#N(onclick='hide_body("N")')
                    th N
                    th
                      p#valueN NX
